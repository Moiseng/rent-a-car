{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 m12">
                    <h1>Votre voiture avec l'id : {{ car.id }}</h1>
                    <h3>Marque : {{ car.model }}</h3>
                    <h3>Prix : {{ car.price }}</h3>

                    {% if car.image.name is defined %}
                        <img src="{{ asset('images/')~car.image.name }}" alt="">
                        {% else %}
                        <p>Page d'image sur cette annonce</p>
                    {% endif %}

                    {% for keyword in car.keywords %}
                        <p>{{ keyword.name }}
                            {% if not loop.last %}
                                ,
                                {% else %}
                                .
                            {% endif %}
                        </p>
                    {% endfor %}

                    {% if car.cities|length > 0 %}
                        <p>
                            Voiture disponible Ã 
                            {% for city in car.cities %}
                                <a class="btn waves-effect waves-light">{{ city.name }}</a>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

