{% block keyword_widget %}
    {% spaceless %}
        <div class="keywordArea">
            {{ block('collection_widget') }}

            {#
                form.vars.value.id ( recupere l'id du keyword courrant )
            #}
            {% if form.vars.value.id is defined %}
                <a data-keyword-id="{{ form.vars.value.id }}"
                   data-delete-path="{{ path('app_index_deletekeyword',{id : form.vars.value.id}) }}"
                        href="#" class="delete-keyword btn waves-effect waves-light red">Supprimer</a>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}